<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:scrollViewStyle">@style/BackgroundStyle</item>
        <!--        <item name="android:textViewStyle">@style/labels</item>-->
        <item name="android:editTextStyle">@style/textInput</item>
        <item name="android:radioButtonStyle">@style/radiobutton</item>
        <item name="checkboxStyle">@style/checkbox</item>
        <item name="buttonStyle">@style/buttons</item>
        <item name="android:textColorHint">@color/colorPrimaryBeta</item>
        <item name="android:typeface">serif</item>

        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme1" parent="Theme.AppCompat.Light.DarkActionBar">
        <!--        <item name="buttonStyle">@style/buttons</item>-->
        <item name="android:fillAfter">true</item>
        <item name="android:enterFadeDuration">600</item>
        <item name="android:exitFadeDuration">200</item>
        <item name="android:animateLayoutChanges">false</item>
        <item name="android:typeface">sans</item>
        <!--        <item name="android:toolbarStyle">@style/ActionBar</item>-->
        <!--        <item name="actionBarStyle">@style/ActionBar</item>-->
        <!-- Customize your theme here. -->
    </style>

    <style name="textView3Head">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">30sp</item>
        <item name="android:padding">20dp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textAlignment">center</item>
        <item name="android:background">#EC477A</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="BackgroundStyle" parent="android:Widget.ScrollView">
        <item name="android:background">#e4e4e4</item>
        <item name="android:padding">18dp</item>
    </style>

    <style name="TestDisabled">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="ActionBar">
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="SpinnerItem">
        <item name="android:textAppearance">@style/SpinnerItemText</item>
    </style>

    <style name="SpinnerItemText">
        <item name="android:textSize">24sp</item>
        <item name="android:typeface">sans</item>
    </style>

    <!--<style name="ActionBarTheme" parent="Widget.AppCompat.Light.ActionBar">-->
    <!--<item name="android:background">@drawable/background_grad</item>-->
    <!--<item name="background">@drawable/background_grad</item>-->
    <!--</style>-->


    <!-- Form Styles -->
    <style name="labels" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <!--        <item name="android:layout_marginTop">24dp</item>-->
        <item name="android:background">@drawable/text_style</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24sp</item>
        <item name="android:typeface">serif</item>
        <item name="android:padding">10dp</item>
        <!--        <item name="android:paddingTop">16dp</item>-->
        <item name="android:elevation">1dp</item>
        <!--        <item name="android:paddingStart">8dp</item>-->
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <!--        <item name="android:textStyle">bold</item>-->
        <!--        <item name="android:paddingEnd">8dp</item>-->


    </style>

    <style name="HeadingTitle" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/colorSecondary</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">12dp</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
    </style>

    <style name="listItems" parent="android:Widget.Material.Light.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">24sp</item>
        <item name="android:typeface">serif</item>
        <item name="android:padding">4dp</item>
    </style>

    <style name="errors">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:background">#ffd6d6</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#ff1e1e</item>
        <item name="android:textSize">24sp</item>
        <item name="android:typeface">serif</item>
        <item name="android:visibility">invisible</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="sub">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:background">#ffd6d6</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">18sp</item>
        <item name="android:typeface">serif</item>
        <item name="android:textStyle">italic</item>
        <item name="android:visibility">invisible</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="textInput" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:elevation">1dp</item>
        <item name="android:background">@drawable/et_style</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textColorHint">@color/colorAccent</item>
        <item name="android:padding">10dp</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:singleLine">true</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:typeface">sans</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:focusableInTouchMode">true</item>
    </style>
    â€‹

    <style name="spinner">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:typeface">serif</item>
        <item name="android:textColor">#ff0000</item>
        <item name="android:background">#d6d6d6</item>
        <item name="android:padding">16dp</item>


    </style>

    <style name="i_textview">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:drawable">@drawable/textview_background_grad</item>
        <item name="android:typeface">serif</item>
        <item name="android:padding">15dp</item>
        <item name="android:elevation">1dp</item>
        <!--        <item name="android:paddingStart">8dp</item>-->
    </style>

    <style name="spinnerItemStyle">
        <item name="android:padding">10dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:typeface">serif</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="spinnerDropDownItemStyle">
        <item name="android:padding">20dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:typeface">serif</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>


    <style name="radiogroup">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">left</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">#d6d6d6</item>
        <item name="android:textSize">24sp</item>
        <item name="android:typeface">serif</item>

    </style>

    <style name="radiobutton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:textSize">24sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/white</item>
        <!--        <item name="android:button">@color/colorPrimary</item>-->
        <item name="android:elevation">1dp</item>
        <item name="android:layout_marginBottom">1dp</item>
        <item name="android:padding">15dp</item>
    </style>

    <style name="buttons" parent="android:Widget.Material.Light.Button">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <!--        <item name="android:minHeight">36dp</item>-->
        <item name="android:textSize">20sp</item>
        <item name="android:typeface">serif</item>
        <item name="android:padding">10dp</item>
        <!--        <item name="android:radius">2dp</item>-->
        <item name="android:elevation">1dp</item>
        <!--        <item name="android:background">@drawable/background_grad</item>-->
    </style>

    <style name="checkbox" parent="android:Widget.Material.Light.CompoundButton.CheckBox">
        <item name="android:layout_gravity">right</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@null</item>
        <item name="android:textSize">24sp</item>
        <item name="android:typeface">serif</item>
        <item name="android:clickable">true</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:drawableStart">?android:attr/listChoiceIndicatorMultiple</item>
        <item name="android:drawablePadding">12dp</item>
        <item name="android:background">@color/white</item>
        <item name="android:padding">12dp</item>


    </style>

